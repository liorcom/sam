<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iv_news_cover"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:src="@drawable/ic_launcher_background"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <View
        android:id="@+id/v_text_container"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:alpha="0.5"
        android:background="@color/gray_dark_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="something something something something  sdads sdasdda  sdadsd adsd"
        android:textColor="@android:color/white"
        android:maxLines="1"
        android:lines="1"
        android:ellipsize="end"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="@+id/v_text_container"
        app:layout_constraintEnd_toEndOf="@+id/v_text_container"
        app:layout_constraintTop_toTopOf="@+id/v_text_container"
        app:layout_constraintBottom_toBottomOf="@+id/v_text_container"
        />

</androidx.constraintlayout.widget.ConstraintLayout>